# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET   /ws                            controllers.WebSocketController.handleWebSocket

GET   /ytlytics                      controllers.SearchController.search(searchKey: String)
GET   /ytlytics/profile              controllers.SearchController.profile(channelName: String)
GET   /ytlytics/tags                 controllers.SearchController.tags(type: String, id: String)

GET   /ytlytics/morestats            controllers.SearchController.displayStats(searchTerms: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
